<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="community"/>
    <head>
        <title>Community Home</title>
    </head>
    <body>
        <referenceContainer name="content">
            <block name="community.into" template="DaoNguyen_Community::intro.phtml"/>
            <block name="community.home" template="DaoNguyen_Community::home.phtml">
                <block name="community.home.sort.by" template="DaoNguyen_Community::post/sort-by.phtml" />
                <block name="community.home.list" class="DaoNguyen\Community\Block\Post\ListProduct" template="DaoNguyen_Community::post/list.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
